		<url-pattern>/insertmed</url-pattern>
	</servlet-mapping>
	
	
	<servlet>
		<servlet-name>Deletemed</servlet-name>
		<servlet-class>test2.DeleteMedServlet</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>Deletemed</servlet-name>
		<url-pattern>/deletemed</url-pattern>
	</servlet-mapping>
	
	<servlet>
		<servlet-name>Showmed</servlet-name>
		<servlet-class>test2.ShowMedServlet</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>Showmed</servlet-name>
		<url-pattern>/show</url-pattern>
	</servlet-mapping>
	
	<servlet>
		<servlet-name>Updatemed</servlet-name>
		<servlet-class>test2.UpdateMedServlet</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>Updatemed</servlet-name>
		<url-pattern>/update</url-pattern>
	</servlet-mapping>
	
</web-app>